<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="300.0" style="-fx-background-color: #99ccff;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
   <center>
      <VBox alignment="CENTER" minHeight="250.0" prefHeight="350.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="graBtn" alignment="CENTER" cache="true" contentDisplay="CENTER" maxHeight="151.0" minHeight="65.0" onAction="#openApplication" prefHeight="88.0" prefWidth="100.0" styleClass="main-button" stylesheets="@main.css" text="Gra" textAlignment="CENTER">
               <font>
                  <Font name="Calibri" size="81.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="statBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showStats" prefHeight="43.0" prefWidth="105.0" styleClass="custom-button" stylesheets="@main.css" text="Statystyki" textAlignment="CENTER" />
            <Button fx:id="howToBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#howTo" prefHeight="65.0" prefWidth="93.0" styleClass="custom-button" stylesheets="@main.css" text="Jak grać?" textAlignment="CENTER" />
            <Button fx:id="endBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#koniec" prefHeight="65.0" prefWidth="93.0" styleClass="custom-button" stylesheets="@main.css" text="Wyjście" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="20.0" top="20.0" />
   </padding>
</BorderPane>
